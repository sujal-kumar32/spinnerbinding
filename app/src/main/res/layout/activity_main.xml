<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDCCC2"
    tools:context=".MainActivity">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Choose any Topic"
    android:textSize="25sp"
    app:layout_constraintBottom_toTopOf="@+id/spDynamic"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginBottom="25dp"
    />
    <Spinner
        android:id="@+id/spDynamic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose any Planet"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/spStatic"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="25dp"
        />
    <Spinner
        android:id="@+id/spStatic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/planets"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv2"
        />



</androidx.constraintlayout.widget.ConstraintLayout>